{
	"compilerOptions": {
		"baseUrl": "./src/",
		"outDir": "./dist/",
		"sourceMap": false,
		"noImplicitAny": false,
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es6",
		"jsx": "react",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"./src/**/*"
	]
}